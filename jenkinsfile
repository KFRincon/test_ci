pipeline {
    agent any

    environment {
        NODE_VERSION = '20'
        PROJECT_DIR = '/var/www/nextjs-app' // Ruta donde se desplegarÃ¡ la app
    }

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ“¥ Clonando el repositorio..."
                git branch: 'main', url: 'https://github.com/usuario/mi-repo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "ğŸ“¦ Instalando dependencias..."
                sh 'npm install'
            }
        }

        stage('Build App') {
            steps {
                echo "ğŸ› ï¸ Construyendo la aplicaciÃ³n Next.js..."
                sh 'npm run build'
            }
        }

        stage('Run Tests') {
            steps {
                echo "âœ… Ejecutando pruebas..."
                sh 'npm test'
            }
        }

        stage('Deploy Locally') {
            steps {
                echo "ğŸš€ Desplegando la aplicaciÃ³n en producciÃ³n..."
                sh '''
                sudo rm -rf $PROJECT_DIR
                sudo mkdir -p $PROJECT_DIR
                sudo cp -r .next/* $PROJECT_DIR
                sudo cp package.json $PROJECT_DIR
                sudo cp -r node_modules $PROJECT_DIR
                cd $PROJECT_DIR
                sudo nohup npm start > app.log 2>&1 &
                '''
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Despliegue exitoso!"
        }
        failure {
            echo "âŒ Error en el pipeline."
        }
    }
}
